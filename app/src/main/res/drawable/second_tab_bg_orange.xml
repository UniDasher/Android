<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="@color/white"
                        ></solid>
                    <stroke
                        android:width="4dp"
                        android:color="@color/secondLightOrange"
                        ></stroke>
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape>
                    <solid
                        android:color="@color/white"
                        ></solid>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid
                        android:color="@color/white"
                        ></solid>
                    <stroke
                        android:width="1dp"
                        android:color="@color/secondTextColor"
                        ></stroke>
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape>
                    <solid
                        android:color="@color/white"
                        ></solid>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>
