<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/alert_navbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin_10"
        >
        <com.uni.unidasher.ui.widget.wheel.WheelView
            android:id="@+id/wheelYear"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/widget_margin_4"
            />
        <com.uni.unidasher.ui.widget.wheel.WheelView
            android:id="@+id/wheelMonth"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="190dp"
            android:layout_marginRight="@dimen/widget_margin_4"
            android:layout_marginLeft="@dimen/widget_margin_4"
            />
        <com.uni.unidasher.ui.widget.wheel.WheelView
            android:id="@+id/wheelDay"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="190dp"
            android:layout_marginLeft="@dimen/widget_margin_4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/text_size_16"
        android:padding="@dimen/widget_margin_10"
        >
        <TextView
            style="@style/WidgetButtonCyan"
            android:id="@+id/txtvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancle"
            android:layout_marginRight="@dimen/widget_margin_4"
            />
        <TextView
            style="@style/WidgetButtonCyan"
            android:id="@+id/txtvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:layout_marginLeft="@dimen/widget_margin_4"
            />
    </LinearLayout>
</LinearLayout>
