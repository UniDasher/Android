<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.uni.unidasher.ui.fragment.ModifyPasswordFragment">
    <include layout="@layout/actionbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/widget_margin_32"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前密码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/secondTextColor"
            />
        <EditText
            android:id="@+id/etxtOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:padding="@dimen/widget_margin_8"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_16"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/secondTextColor"
            android:layout_marginTop="@dimen/widget_margin_10"
            />
        <EditText
            android:id="@+id/etxtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:padding="@dimen/widget_margin_8"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/secondTextColor"
            android:layout_marginTop="@dimen/widget_margin_10"
            />
        <EditText
            android:id="@+id/etxtRePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:padding="@dimen/widget_margin_8"
            android:inputType="textPassword"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/text_size_16"
            />

        <TextView
            android:id="@+id/txtvSave"
            style="@style/WidgetButtonCyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="@dimen/widget_margin_20"
            />
    </LinearLayout>
</LinearLayout>
