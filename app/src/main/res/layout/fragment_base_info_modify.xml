<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.uni.unidasher.ui.fragment.BaseInfoModifyFragment">
    <include layout="@layout/actionbar"></include>


    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext_bg"
        android:padding="@dimen/widget_margin_10"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/mainTextColor"
        android:layout_margin="@dimen/widget_margin_20"
        android:focusable="true"
        ></EditText>
    <LinearLayout
        android:id="@+id/layoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/widget_margin_20"
        android:layout_marginLeft="@dimen/widget_margin_20"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/editValidationCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:padding="@dimen/widget_margin_8"
                android:background="@drawable/login_edittext_bg"
                android:layout_weight="1.7"
                />
            <TextView
                android:id="@+id/txtvValidate"
                style="@style/Widget.Button.Red.Box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/signUpValidateBtnText"
                android:textSize="@dimen/text_size_18"
                android:layout_weight="1.3"
                android:layout_marginLeft="@dimen/widget_margin_10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondTextColor"
            android:textSize="@dimen/text_size_16"
            android:text="修改后，配送认证资料（或账户信息资料）也会同步修改。\n修改后，验证手机号也会变更。"
            android:layout_marginTop="@dimen/widget_margin_14"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/txtvSave"
        style="@style/WidgetButtonCyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_margin_20"
        android:layout_marginRight="@dimen/widget_margin_20"
        android:layout_marginTop="@dimen/widget_margin_32"
        android:text="@string/save"
        />


</LinearLayout>
