<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin_32"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.uni.unidasher.ui.activity.PhoneValidateActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/phone_validate"
        android:layout_marginTop="@dimen/widget_margin_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/widget_margin_32"
        >
        <TextView
            style="@style/Widget.TextView.Base.Second"
            android:text="请输入注册手机号，获取验证码:"
            />
        <EditText
            android:id="@+id/etPhone"
            style="@style/Widget.EditText.Base"
            android:singleLine="true"
            />

        <TextView
            style="@style/Widget.TextView.Base.Second"
            android:text="@string/validateNum"
            android:layout_marginTop="@dimen/widget_margin_32"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center_vertical"

            >
            <EditText
                android:id="@+id/etCode"
                style="@style/Widget.EditText.Base"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_weight="1.7"
                />
            <TextView
                android:id="@+id/btnValidate"
                style="@style/Widget.Button.Red.Box"
                android:layout_width="0dp"
                android:text="@string/signUpValidateBtnText"
                android:layout_weight="1.3"
                android:layout_marginLeft="@dimen/widget_margin_10"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/widget_margin_50"
            >
            <TextView
                android:id="@+id/txtvCancel"
                style="@style/Widget.Button.Red.Solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/widget_margin_10"
                />
            <TextView
                android:id="@+id/txtvNext"
                style="@style/Widget.Button.Red.Solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/widget_margin_10"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
