<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uni.unidasher.ui.fragment.AccountInfoFragment">
    <include layout="@layout/actionbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_16"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgvLogo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/user_pic_default"
                        app:border_width="2dp"
                        app:border_color="@color/white"
                        />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/widget_margin_32"
                android:paddingRight="@dimen/widget_margin_32"
                android:layout_marginTop="@dimen/widget_margin_20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/secondTextColor"

                    />

                <TextView
                    android:id="@+id/txtvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/widget_margin_8"
                    android:textSize="@dimen/text_size_16"
                    android:background="@drawable/login_edittext_bg"
                    android:textColor="@color/mainTextColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/secondTextColor"
                    android:layout_marginTop="@dimen/widget_margin_10"
                    />

                <TextView
                    android:id="@+id/txtvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/widget_margin_8"
                    android:textSize="@dimen/text_size_16"
                    android:background="@drawable/login_edittext_bg"
                    android:textColor="@color/mainTextColor"
                    />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/mainTextColor"
                    android:layout_marginTop="@dimen/widget_margin_10"
                    android:paddingLeft="@dimen/widget_margin_8"
                    />

                <TextView
                    android:id="@+id/txtvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/widget_margin_8"
                    android:paddingBottom="@dimen/widget_margin_8"
                    android:textSize="@dimen/text_size_16"
                    android:background="@drawable/login_edittext_bg"
                    android:textColor="@color/mainTextColor"
                    />-->

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
