<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/widget_margin_10"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    >
    <ImageView
        android:id="@+id/imgvUserLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user_pic_default"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/widget_margin_10"
        >
        <TextView
            android:id="@+id/txtvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单人"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/text_size_16"
            />
        <TextView
            android:id="@+id/txtvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐费"
            android:layout_below="@+id/txtvUserName"
            android:textColor="@color/secondTextColor"
            android:textSize="@dimen/text_size_14"
            />
        <TextView
            android:id="@+id/txtvMoneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_below="@+id/txtvUserName"
            android:layout_toRightOf="@+id/txtvMoney"
            android:layout_marginLeft="@dimen/widget_margin_8"
            android:textColor="@color/secondLightOrange"
            android:textSize="@dimen/text_size_14"
            />
        <TextView
            android:id="@+id/txtvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtvUserName"
            android:layout_toRightOf="@+id/txtvMoneyType"
            android:textColor="@color/secondLightOrange"
            android:textSize="@dimen/text_size_14"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/imgvDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/direction"
            />
        <TextView
            android:id="@+id/txtvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500m"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/secondTextColor"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtvRob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rob_pressed"
        android:layout_marginLeft="@dimen/widget_margin_10"
        android:clickable="true"
        />

</LinearLayout>
