<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.uni.unidasher.ui.activity.OrderDetailActivity">

    <include layout="@layout/actionbar"></include>

    <ScrollView
        android:id="@+id/scrollerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/widget_margin_10"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/orderNum"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/mainTextColor"
                                />

                            <TextView
                                android:id="@+id/txtvOrderNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="325149165841334"
                                android:textSize="@dimen/text_size_16"
                                android:layout_marginLeft="@dimen/widget_margin_8"
                                android:textColor="@color/mainTextColor"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtvShopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美美餐厅"
                            android:textSize="@dimen/text_size_18"
                            android:layout_marginTop="@dimen/widget_margin_8"
                            android:textColor="@color/mainTextColor"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/order_status_icon"
                            />
                        <TextView
                            android:id="@+id/txtvOrderStatusDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已下单"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/secondTextColor"
                            android:layout_marginTop="@dimen/widget_margin_4"
                            />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrayBg"
                    android:layout_marginTop="@dimen/widget_margin_4"
                    android:layout_marginBottom="@dimen/widget_margin_4"
                    ></View>

                <com.uni.unidasher.ui.views.RightAlignedHorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingTop="@dimen/widget_margin_10"
                    android:fillViewport="true"
                    android:id="@+id/timeForamaterScorllView"
                    >
                    <LinearLayout
                        android:id="@+id/layoutTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        ></LinearLayout>
                    <!--<com.uni.unidasher.ui.views.TimeFormaterView android:layout_width="match_parent"-->
                        <!--android:id="@+id/timeFormaterView"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--></com.uni.unidasher.ui.views.TimeFormaterView>-->
                </com.uni.unidasher.ui.views.RightAlignedHorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/layoutMapNav"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/order_status_timeout"
                                android:text="1"
                                android:textColor="@color/white"
                                android:gravity="center"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/widget_margin_10"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/secondTextColor"
                                    android:text="购买地址:"
                                    android:textSize="@dimen/text_size_14"
                                    />
                                <TextView
                                    android:id="@+id/txtvShopAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mainTextColor"
                                    android:text="白塔东路管家园21号"
                                    android:textSize="@dimen/text_size_16"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/widget_margin_10"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/order_status_timeout"
                                android:text="2"
                                android:textColor="@color/white"
                                android:gravity="center"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/widget_margin_10"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/secondTextColor"
                                    android:text="送单地址:"
                                    android:textSize="@dimen/text_size_14"
                                    />
                                <TextView
                                    android:id="@+id/txtvUserAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/mainTextColor"
                                    android:text="白塔东路创元科技园三区2407"
                                    android:textSize="@dimen/text_size_16"
                                    />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtvMapNav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_map_nav_pressed"
                        android:clickable="true"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/secondTextColor"
                ></View>

            <LinearLayout
                android:id="@+id/layoutUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/widget_margin_8"
                android:gravity="center_vertical"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgvSendUserHead"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/widget_margin_8"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/txtvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单人"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/widget_margin_4"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/mainTextColor"
                        />

                    <LinearLayout
                        android:id="@+id/layoutEvaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <TextView
                            android:id="@+id/txtvGood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/good_orange"
                            android:text="12"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/widget_margin_4"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/secondTextColor"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/bad_gray"
                            android:text="5"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/widget_margin_4"
                            android:layout_marginLeft="@dimen/widget_margin_10"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/secondTextColor"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTimePeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/txtvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondTextColor"
                            android:text="10:00--12:00"
                            android:textSize="@dimen/text_size_14"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/widget_margin_8"
                    android:gravity="center_vertical|right"
                    >
                    <TextView
                        android:id="@+id/txtvCallSendUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/widget_margin_4"
                        android:background="@drawable/button_call_pressed"
                        android:clickable="true"
                        />
                    <TextView
                        android:id="@+id/txtvChat"
                        style="@style/WidgetButtonCyan"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="聊天"
                        android:layout_marginLeft="@dimen/widget_margin_8"
                        android:clickable="true"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrayBg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/widget_margin_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/secondTextColor"
                    android:text="订单消费"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/widget_margin_10"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/mainTextColor"
                            />

                        <TextView
                            android:id="@+id/txtvDishTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/mainTextColor"
                            android:layout_marginLeft="@dimen/widget_margin_4"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="餐费(含打包费)"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/mainTextColor"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/secondLightOrange"
                    android:layout_margin="@dimen/widget_margin_4"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/widget_margin_8"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/mainTextColor"
                            />

                        <TextView
                            android:id="@+id/txtvSendPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/mainTextColor"
                            android:layout_marginLeft="@dimen/widget_margin_4"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送货费"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/mainTextColor"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/secondLightOrange"
                    android:layout_margin="@dimen/widget_margin_8"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/widget_margin_8"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/red"
                            />

                        <TextView
                            android:id="@+id/txtvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/red"
                            android:layout_marginLeft="@dimen/widget_margin_4"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
            </LinearLayout>
            <com.uni.unidasher.ui.widget.ListViewForScrollView
                android:id="@+id/listvOrderMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/lightGrayBg"
                android:dividerHeight="1dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                >
            </com.uni.unidasher.ui.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondTextColor"
        ></View>
    <LinearLayout
        android:id="@+id/layoutBtnCancelOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin_10"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txtvCancel"
            style="@style/WidgetButtonCyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBtnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin_10"
        >
        <TextView
            android:id="@+id/txtvComplain"
            style="@style/WidgetButtonCyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/widget_margin_4"
            />

        <TextView
            android:id="@+id/txtvComplete"
            style="@style/WidgetButtonCyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/widget_margin_4"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBtnGetOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/widget_margin_10"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txtvRob"
            style="@style/WidgetButtonCyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢单"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>
