<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/alert_navbar"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/widget_margin_12"
        android:paddingBottom="@dimen/widget_margin_12"
        android:paddingLeft="@dimen/widget_margin_16"
        android:text="@string/evaluation_des"
        android:textColor="@color/mainTextColor"
        android:textSize="@dimen/text_size_14"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondTextColor"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/widget_margin_16"
        android:paddingRight="@dimen/widget_margin_16"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_margin_10"
            android:paddingBottom="@dimen/widget_margin_10"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/head_normal"
                android:layout_height="@dimen/head_normal"
                android:src="@mipmap/user_pic_default"
                />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/widget_margin_10"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送单人"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/text_size_16"
                    />
                <TextView
                    android:id="@+id/txtvSenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="@dimen/widget_margin_4"
                    />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rbSenderGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/widget_margin_4"
                android:layout_marginRight="@dimen/widget_margin_10"
                android:checkedButton="@+id/rbSenderGood"
                >
                <RadioButton
                    android:id="@+id/rbSenderGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/good_orange"
                    android:drawablePadding="@dimen/widget_margin_4"
                    android:button="@drawable/radio_button"
                    android:padding="@dimen/widget_margin_4"
                    />

                <RadioButton
                    android:id="@+id/rbSenderBad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/bad_gray"
                    android:drawablePadding="@dimen/widget_margin_4"
                    android:layout_marginLeft="@dimen/widget_margin_16"
                    android:button="@drawable/radio_button"
                    android:padding="@dimen/widget_margin_4"
                    />
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondTextColor"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_margin_10"
            android:paddingBottom="@dimen/widget_margin_10"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/head_normal"
                android:layout_height="@dimen/head_normal"
                android:src="@mipmap/user_pic_default"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/widget_margin_16"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="餐厅名称"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/text_size_16"
                    />
                <TextView
                    android:id="@+id/txtvShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondTextColor"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginTop="@dimen/widget_margin_4"
                    />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rbShopGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/widget_margin_4"
                android:layout_marginRight="@dimen/widget_margin_10"
                android:checkedButton="@+id/rbShopGood"
                >
                <RadioButton
                    android:id="@+id/rbShopGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/good_orange"
                    android:drawablePadding="@dimen/widget_margin_4"
                    android:button="@drawable/radio_button"
                    android:padding="@dimen/widget_margin_4"
                    />

                <RadioButton
                    android:id="@+id/rbShopBad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/bad_gray"
                    android:drawablePadding="@dimen/widget_margin_4"
                    android:layout_marginLeft="@dimen/widget_margin_16"
                    android:button="@drawable/radio_button"
                    android:padding="@dimen/widget_margin_4"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondTextColor"
        ></View>

    <TextView
        android:id="@+id/txtvConfirm"
        style="@style/WidgetButtonCyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_margin_16"
        android:layout_marginRight="@dimen/widget_margin_16"
        android:layout_marginTop="@dimen/widget_margin_32"
        android:layout_marginBottom="@dimen/widget_margin_16"
        android:text="@string/confirm"
        />
</LinearLayout>
