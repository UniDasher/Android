<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin_32"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.uni.unidasher.ui.activity.PhoneValidateActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/forgot_password"
        android:layout_marginTop="@dimen/widget_margin_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/widget_margin_32"
        >
        <TextView
        style="@style/Widget.TextView.Base.Second"
        android:text="请输入新密码"
        />
        <EditText
            android:id="@+id/etPwd"
            style="@style/Widget.EditText.Base"
            android:singleLine="true"
            android:inputType="textPassword"
            />

        <TextView
            style="@style/Widget.TextView.Base.Second"
            android:text="确认新密码"
            android:layout_marginTop="@dimen/widget_margin_32"
            />
        <EditText
            android:id="@+id/etRePwd"
            style="@style/Widget.EditText.Base"
            android:singleLine="true"
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/widget_margin_50"
            >
            <TextView
                android:id="@+id/txtvCancel"
                style="@style/Widget.Button.Red.Solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/widget_margin_10"
                />
            <TextView
                android:id="@+id/txtvSave"
                style="@style/Widget.Button.Red.Solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/widget_margin_10"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
