<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/actionbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txtvRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="饭店"
            android:gravity="center"
            android:padding="@dimen/widget_margin_10"
            android:background="@drawable/button_gray_white_pressed"
            android:textColor="@drawable/text_secondtextcolor_lightorange_pressed"
            android:textSize="@dimen/text_size_16"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txtvSuper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="超市"
            android:gravity="center"
            android:padding="@dimen/widget_margin_10"
            android:background="@drawable/button_gray_white_pressed"
            android:textColor="@drawable/text_secondtextcolor_lightorange_pressed"
            android:textSize="@dimen/text_size_16"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin_10"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排列顺序"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/mainTextColor"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/widget_margin_8"
                    >
                    <TextView
                        android:id="@+id/txtvEvaluationFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:text="评价排序"
                        android:textColor="@drawable/text_gray_white_click"
                        android:background="@drawable/button_orange_pressed"
                        android:paddingTop="@dimen/widget_margin_4"
                        android:paddingBottom="@dimen/widget_margin_4"
                        android:paddingLeft="@dimen/widget_margin_20"
                        android:paddingRight="@dimen/widget_margin_20"
                        android:clickable="true"
                        />
                    <TextView
                        android:id="@+id/txtvDistanceFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:text="距离排序"
                        android:layout_marginLeft="@dimen/widget_margin_20"
                        android:textColor="@drawable/text_gray_white_click"
                        android:background="@drawable/button_orange_pressed"
                        android:paddingTop="@dimen/widget_margin_4"
                        android:paddingBottom="@dimen/widget_margin_4"
                        android:paddingLeft="@dimen/widget_margin_20"
                        android:paddingRight="@dimen/widget_margin_20"
                        android:clickable="true"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondTextColor"
                    android:layout_marginTop="@dimen/widget_margin_8"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/widget_margin_10"
                    >
                    <TextView
                        android:id="@id/txtvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="饭店类型"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/mainTextColor"
                        />

                    <com.uni.unidasher.ui.widget.GridViewForScrollView
                        android:id="@+id/gridViewType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="3"
                        android:gravity="center"
                        android:listSelector="@android:color/transparent"
                        android:verticalSpacing="@dimen/widget_margin_10"
                        android:layout_marginTop="@dimen/widget_margin_10"
                        android:scrollbars="none"
                        ></com.uni.unidasher.ui.widget.GridViewForScrollView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/txtvConfirm"
            style="@style/WidgetButtonCyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:clickable="true"
            />
    </LinearLayout>

</LinearLayout>
