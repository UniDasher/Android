<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
>

    <include layout="@layout/actionbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/txtvCompletedOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="完成订单"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:paddingTop="@dimen/widget_margin_10"
            android:paddingBottom="@dimen/widget_margin_10"
            android:background="@drawable/second_tab_bg_orange"
            android:textColor="@drawable/text_gray_orange_click"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/txtvErrorOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中止订单"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:paddingTop="@dimen/widget_margin_10"
            android:paddingBottom="@dimen/widget_margin_10"
            android:background="@drawable/second_tab_bg_orange"
            android:textColor="@drawable/text_gray_orange_click"
            android:clickable="true"
            />
    </LinearLayout>
    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrayBg"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listvOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            />
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>
