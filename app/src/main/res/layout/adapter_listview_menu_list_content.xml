<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin_8"
    android:descendantFocusability="blocksDescendants"
    >
    <TextView
        android:id="@+id/txtvDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="脆皮鸡肉堡"
        android:textColor="@color/mainTextColor"
        android:textSize="@dimen/text_size_16"
        />

    <TextView
        android:id="@+id/txtvTaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cyan_light_color"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/widget_margin_4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/widget_margin_4"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/secondTextColor"
                android:text="/份"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/widget_margin_10"
            >
            <TextView
                android:id="@+id/txtvRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondTextColor"
                android:background="@drawable/remove_pressed"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/txtvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/dark_grey"
                android:text="0"
                android:layout_marginLeft="@dimen/widget_margin_4"
                android:layout_marginRight="@dimen/widget_margin_4"
                android:ems="2"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/txtvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondTextColor"
                android:background="@drawable/add_pressed"
                android:clickable="true"
                />


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/txtvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/secondTextColor"
        android:layout_marginTop="@dimen/widget_margin_4"
        />

</LinearLayout>
