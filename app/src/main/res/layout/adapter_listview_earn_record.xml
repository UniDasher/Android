<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin_10"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/txtvOrderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123132165465"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/text_size_18"
            />
        <TextView
            android:id="@+id/txtvCreateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-25 12:51"
            android:textColor="@color/secondTextColor"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="@dimen/widget_margin_8"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/widget_margin_10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送餐费"
                android:textSize="@dimen/widget_margin_12"
                android:textColor="@color/secondTextColor"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/secondTextColor"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/txtvServiceMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/secondLightOrange"
                    android:text="48"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginLeft="@dimen/widget_margin_20"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐费"
                android:textSize="@dimen/widget_margin_12"
                android:textColor="@color/secondTextColor"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/secondTextColor"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/txtvDishMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/secondLightOrange"
                    android:text="48"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
